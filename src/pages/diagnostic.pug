    //- SIDEBAR COLUMN
    .flex-item.item-md-3
      //- USER PERSONAL INFO CARD
      .diagnostic_card.card-box.no-borders.shadow
        include ./../partitials/diagnostic/personal-info.pug

      //- COMMENTS BLOCK
      .diagnostic_card.card-box.card-box--comments.no-borders.shadow.card_comment
        include ./../partitials/diagnostic/comments.pug

      //- EDIT HISTORY BLOCK
      .diagnostic_card.card-box--history.card-box.no-borders.shadow.card_comment
        include ./../partitials/diagnostic/edit-history.pug

    //- CONTENT COLUMN
