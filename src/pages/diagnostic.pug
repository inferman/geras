extends ./../layouts/main 

block pageTitle
  .page-title.hidden-xl-up
    +burger('sidebar_toggler-box hidden-xl-up')
    h1 Patients

block tabs
  .diagnostic_tabs-container.flex-container.justify-between.align-center
    .top-level-tabs.flex-item
      include ./../partitials/tabs/main-tabs
    .selector-holder.flex-item
        +selector(0, ["this month", "this year", "smth else"])

block content
