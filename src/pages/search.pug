extends ./../layouts/main
block content
  - const statusesList = ["All patients", "Completed Test", "Have recommendations", "Have next meeting"];
  - const downloadsList = ["Download PDF Report", "Download Excel Report"]; 

  .page-title
    +burger('sidebar_toggler-box hidden-xl-up')
    h1 Patients
  .search-box
    .flex-container.justify-between.align-start
      .flex-item.item-sm-12.item-lg-7
        include ./../partitials/search/search-block
      .search_filters-row.flex-item.item-sm-12.item-lg-5
        .flex-container
          .flex-item.flex-item--shrink.search_status-selector
            +selector(0, statusesList, false, false)

          .flex-item.flex-item--shrink.search_filters-box
            button(type="button").search_btn.search_btn--filters
              .icon-holder
                +svgIcon('filter-icon', 'search_filter-icon')
              | Filters
            div.hide
              include ./../partitials/search/filters-block

          .flex-item.flex-item--shrink
            .search_download-box
              button(type="button").search_btn.search_btn--download
                .icon-holder
                  +svgIcon('download-arrow-down', 'search_download-icon')
              +drop-list(downloadsList, false, false)

  .search_table-box
    include ./../partitials/search/search-table